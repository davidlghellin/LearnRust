####################################################################################################
## Builder
####################################################################################################
FROM rust:latest AS builder

RUN rustup target add x86_64-unknown-linux-musl
RUN apt update && apt install -y musl-tools musl-dev
RUN update-ca-certificates

# Define argumentos de usuario y UID dinámico
ARG USER=csv-work
ARG UID=10001

RUN adduser \
    --disabled-password \
    --gecos "" \
    --home "/nonexistent" \
    --shell "/sbin/nologin" \
    --no-create-home \
    --uid "${UID}" \
    "${USER}"

WORKDIR /csv-work
COPY ./ .
RUN cargo build --target x86_64-unknown-linux-musl --release

####################################################################################################
## Final image
####################################################################################################
FROM scratch

# Importa info de usuarios
COPY --from=builder /etc/passwd /etc/passwd
COPY --from=builder /etc/group /etc/group

WORKDIR /csv-work

# Copia el binario
COPY --from=builder /csv-work/target/x86_64-unknown-linux-musl/release/csv-work ./

# Usa un usuario no privilegiado con UID dinámico
ARG USER=csv-work
USER ${USER}:${USER}

VOLUME ["/csv-work"]

CMD ["/csv-work/csv-work"]

